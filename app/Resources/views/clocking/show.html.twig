{% extends 'base.html.twig' %}

{% block body %}
    <div class="">
        <a href="{{ path('clocking_index') }}" class="btn btn-success left"><i class="fa fa-chevron-circle-left"></i> Retour</a>

        <div class="clearfix"></div>
        <div class="separator"></div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Pointage le "{% if clocking.date %}{{ clocking.date|date('d-m-Y') }}{% endif %}"</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Personel</th>
                                <th>Etat</th>
                                <th>Lieu</th>
                                <th>Heure d'arriv√©e</th>
                                <th>Observation</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for report in clocking.clockingReports %}
                                <tr>
                                    <td>{{ report.personal }}</td>
                                    <td>{{ report.status }}</td>
                                    <td>{{ report.location }}</td>
                                    <td>{{ report.arrivalTime | date('H:i') }}</td>
                                    <td>{{ report.comment }}</td>
                                </tr>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

