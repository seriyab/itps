{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clocking</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clocking.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if clocking.date %}{{ clocking.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ clocking.comment }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('clocking_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('clocking_edit', { 'id': clocking.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
