{% extends 'base.html.twig' %}

{% block body %}
    <h1>Materialsofconstructions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Supplier</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for materialsOfConstruction in materialsOfConstructions %}
            <tr>
                <td><a href="{{ path('materialsofconstruction_show', { 'id': materialsOfConstruction.id }) }}">{{ materialsOfConstruction.id }}</a></td>
                <td>{{ materialsOfConstruction.type }}</td>
