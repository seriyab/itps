                <td>{{ materialsOfConstruction.supplier }}</td>
                <td>{{ materialsOfConstruction.project }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('materialsofconstruction_show', { 'id': materialsOfConstruction.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('materialsofconstruction_edit', { 'id': materialsOfConstruction.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('materialsofconstruction_new') }}">Create a new materialsOfConstruction</a>
        </li>
    </ul>
{% endblock %}
