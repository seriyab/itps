{% extends 'base.html.twig' %}

{% block body %}

    <a href="{{ path('bankaccount_index') }}" class="btn btn-success left"><i class="fa fa-chevron-circle-left"></i> Retour</a>

    {{ form_start(delete_form) }}
    <input type="submit" value="Supprimer" class="btn btn-danger">
    {{ form_end(delete_form) }}
    <div class="clearfix"></div>
    <div class="separator"></div>
    <div class="row">
    <div class="col-md-12"> {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        </div>
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Modification Compte "{{ bankAccount.bank }}"</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal form-label-left', 'data-parsley-validate':''}}) }}
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Banque <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.bank, {'attr': {'class': 'form-control col-md-7 col-xs-12'}} ) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">RIB
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.rib, {'attr': {'class': 'form-control col-md-7 col-xs-12'}} ) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Statut
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget(edit_form.status, {'attr': {'class': 'form-control col-md-7 col-xs-12'}} ) }}
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="{{ path('bankaccount_index') }}" class="btn btn-default" type="button">Annuler</a>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}