{% extends 'base.html.twig' %}

{% block body %}
    <div class="">
        <div class="actionBar">
            <a href="{{ path('project_new') }}" class="btn btn-primary"><i class="fa fa-plus"></i> Ajouter</a>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Chantiers en cours</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Client</th>
                                <th>Date de d√©marrage</th>
                                <th>Date de fin</th>
                                <th>Ville</th>
                                <th>Adresse</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for project in projects %}
                                <tr>
                                    <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.name }}</a></td>
                                    <td>{{ project.client.name }}</td>
                                    <td>{% if project.startDate %}{{ project.startDate|date('Y-m-d') }}{% endif %}</td>
                                    <td>{% if project.endDate %}{{ project.endDate|date('Y-m-d') }}{% endif %}</td>
                                    <td>{{ project.city }}</td>
                                    <td>{{ project.address }}</td>
                                    <td>{{ project.budget }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('project_show', { 'id': project.id }) }}" class="btn btn-sm btn-success" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Afficher"><i class="fa fa-eye"></i></a>
                                            <a href="{{ path('project_edit', { 'id': project.id }) }}" class="btn btn-sm btn-warning" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Modifier"><i class="fa fa-edit"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
