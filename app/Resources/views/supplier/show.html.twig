{% extends 'base.html.twig' %}

{% block body %}
    <h1>Supplier</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supplier.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ supplier.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ supplier.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ supplier.mail }}</td>
            </tr>
            <tr>
                <th>Contactname</th>
                <td>{{ supplier.contactName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('supplier_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
