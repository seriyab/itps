{% extends 'base.html.twig' %}

{% block body %}
    <h1>Orderline</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orderLine.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ orderLine.quantity }}</td>
            </tr>
            <tr>
                <th>Taxe</th>
                <td>{{ orderLine.taxe }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ orderLine.label }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orderline_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('orderline_edit', { 'id': orderLine.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
